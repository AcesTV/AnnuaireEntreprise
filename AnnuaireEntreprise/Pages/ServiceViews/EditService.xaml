<Window x:Class="AnnuaireEntreprise.Pages.ServiceViews.EditService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireEntreprise.Pages.ServiceViews"
        mc:Ignorable="d"
       Title="Modifier un Service" Height="164" Width="314" FocusManager.FocusedElement="{Binding ElementName=ServiceInput}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Nom du service :" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            <TextBlock IsEnabled="False" x:Name="IdHidden" Height="0"></TextBlock>
            <TextBox  x:Name="ServiceInput" Margin="0,25,0,0" Width="225"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Valider" Click="Button_Valider" Margin="0,0,20,0"/>
                <Button Content="Annuler" Click="Button_Cancel"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
