<Window x:Class="AnnuaireEntreprise.Pages.ServiceViews.AddService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireEntreprise.Pages.ServiceViews"
        mc:Ignorable="d"
        Title="Ajouter un Service" Height="164" Width="314" FocusManager.FocusedElement="{Binding ElementName=serviceInput}">
    <Grid Background="AliceBlue">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Nom du service :" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            <TextBox  x:Name="serviceInput" Margin="0,25,0,0" Width="225"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Background="FloralWhite" Content="Valider" Click="Button_Valider" Margin="0,0,20,0" Padding="5,1,5,1"/>
                <Button Background="FloralWhite" Content="Annuler" Click="Button_Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5,1,5,1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
